@model CRUDmvc.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Employee</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="Create">

                        <div class="form-group">
                            <label asp-for="Name"></label><br />
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter the name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <label asp-for="City"></label><br />
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter the City" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <label asp-for="Position"></label><br>
                            <input type="text" asp-for="Position" class="form-control" placeholder="Enter the Role" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <label asp-for="Salary"></label><br />

                            <input type="text" asp-for="Salary" class="form-control" placeholder="Enter the Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success floatright" />
                        </div>
                            
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
